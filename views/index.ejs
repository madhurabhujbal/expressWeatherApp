    </head>
    <body>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#"> Home </a>
                </li>
            </ul>
            <form action="./pug" method="GET">
                <input type="submit" value="Pug view">
            </form>
        </nav>
        <br>
        <br>

        <div class="container">
            <div class="jumbotron text-center">
                <h4> Weather Information </h4> <br>
                <form action="/weather" method="GET">
                    <div class="row">
                        <div class="col-sm-2"> Enter city :</div>
                        <div>
                            <input name="City" autofocus/><br>
                            <br>
                            <br>
                            <input type="submit" value="Submit"/><br>
                            </form>
                        </div>
                    </div>
                <br>


                <% if (locals.errMsg) { %>
                <div class="row">
                        <label class="col-sm-2 form-control-plaintext"> <%= errMsg %> </label>
                    </div>
                </div>
                <br>
                <% } %>
            </div>
        </div>
    </body>
</html>